<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AbooutActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/themeImage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/biitlogo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="200dp"
                android:src="@drawable/scorecardimg"
                android:id="@+id/line1"
                android:layout_below="@id/themeImage"
                />

            <!---->
            <!--<TextView-->
                <!--android:id="@+id/line1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/themeImage"-->
                <!--android:textColor="#028A3B"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="BIIT"-->
                <!--android:textSize="90sp" />-->

            <TextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorOCSred"
                android:text="Project By"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:text="S. M. Ali Fraz Bukhari"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:text="2015-ARID-2401"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/line5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorOCSred"
                android:text="Supervised By"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/line6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line5"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:text="Mr. Zahid Ahmad"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line6"
                android:gravity="center"
                android:maxLines="4"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="This Project Was Done For BIIT, And \nThus Presented To BIIT \nYear\n2019"
                android:textSize="14sp" />


        </RelativeLayout>

    </ScrollView>
</LinearLayout>