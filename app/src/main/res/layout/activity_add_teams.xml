<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTeams"
    android:background="#fff"
    >
    <Toolbar
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="11dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/mainimage"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"
                android:src="@drawable/scorecardimgicon"
                />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_toRightOf="@id/mainimage"
               android:layout_marginTop="10dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Online Score Card"
                   android:id="@+id/title"

                   android:textColor="#458AFC"
                   android:textSize="20sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Add Team"
                   android:textSize="15sp"
                   android:textColor="@color/colorOCSred"
                   />

           </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:src="@drawable/menuicon4dots"
                android:id="@+id/menu3dotimage"

                android:layout_marginTop="17dp"
                android:layout_alignParentEnd="true"

                />


        </RelativeLayout>


    </Toolbar>
    <View
        android:layout_centerInParent="true"
        android:layout_below="@id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/TopHorizontalLine"
        android:background="#dedede"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Team Name"
       android:layout_below="@id/TopHorizontalLine"

       />


</RelativeLayout>